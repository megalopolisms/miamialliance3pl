rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Shipment documents â€” authenticated users can upload to their own shipment paths
    match /shipments/{trackingNumber}/documents/{fileName} {
      // Any authenticated user can upload (max 10MB)
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && (request.resource.contentType.matches('image/jpeg')
                       || request.resource.contentType.matches('image/png')
                       || request.resource.contentType.matches('application/pdf'));

      // Any authenticated user can read (for tracking page)
      allow read: if request.auth != null;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
